{
  "manifest_version": 2,
  "name": "Hidden Ads Blocker",
  "version": "1.0",
  "description": "A browser extension that blocks hidden ads on websites.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Hidden Ads Blocker"
  }
}
